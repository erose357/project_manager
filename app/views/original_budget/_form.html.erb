<%= form_for @original_budget, url: project_path(@original_budget.project.id), :html => {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
  <%= f.label :purchase_price, 'Purchase Price', class: "col-md-5 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :purchase_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
  <%= f.label :sf_construction, 'SF for Construction/Renovation', class: "col-md-5 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :sf_construction, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
  <%= f.label :sf_landscape, 'SF for Landscaping', class: "col-md-5 control-label" %>
    <div class="col-md-7">
      <%= f.text_field :sf_construction, class: "form-control" %>
    </div>
  </div>
<% end %>
