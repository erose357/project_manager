<%= form_for @project, :html => {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :street, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :street, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zip, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :zip, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-offset-2 col-md-2">
    <%= f.submit "Create Project", class: "btn btn-success" %>
  </div>
<% end %>
